<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_invoice_printed_tree">
            <field name="name">account.invoice.printed</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml" >
                <xpath expr="//tree" position="inside">
                    <field name="printed"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="invoice_printed_search">
            <field name="name">invoice.printed.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter" />
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <separator/>
                    <filter name="printed" string="Impresas" domain="[('printed','=',True)]"/>
                    <filter name="not_printed" string="Sin Imprimir" domain="[('printed','=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="invoice_printed_form" model="ir.ui.view">
            <field name="name">invoice.printed.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <field name="payment_reference" position="after">
                    <field name="printed" readonly="1"/>
                    <!-- <field name="message_attachment_count"></field> -->
                </field> 
            </field>
        </record>

    </data>
</odoo>