<odoo>
	<record id="form_purchase_weight_inherited" model="ir.ui.view">
		<field name="name">form.purchase.weight.inherited</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form"/>
		<field name="arch" type="xml">
            <!--order line tree-->
			<xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="before">
                <field name="product_weight_global"/>
			</xpath>
            <!--in order-->
            <xpath expr="//field[@name='notes']" position="before">
                <group string="Total Weight">
                    <label for="total_product_weight_global"/>
                    <div class="o_row">
                        <field name="total_product_weight_global"/>
                        <span>kg</span>
                    </div>
                </group>
            </xpath>
		</field>
	</record>
</odoo>